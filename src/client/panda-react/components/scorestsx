import { Query } from 'react-apollo'
import gql from 'graphql-tag'

const GET_SCORES = gql`
  type scoreQuery($listing: ID!) {
    scores(listingID: $listing) {
      statistics {
        averageAge
        median {
          INCOME: income
          DELTA: delta
        }
        lifestyle {
          category
          scoreRatio
        }
      }
    }
  }
`

type Median = {
  income: number
  delta: number
}

type Lifestyle = {
  category: string,
  scoreRatio: number,
}

type Statistics = {
  median: Median,
  averageAge: number
}

interface Scores {
  statistics: Statistics
  lifestyle: Lifestyle
}